{
  "manifest_version": 3,
  "name": "IMDB Movie Player",
  "version": "1.0.0",
  "description": "The ultimate Chrome extension for movie lovers.",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "IMDB Movie Player",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "js": [
        "contentScript.js"
      ]
    }
  ]
}